<odoo>

     <!-- Inherit the existing employee form view to add new fields -->
    <record id="view_hr_employee_form_inherit_training" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.training</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <!-- Add a new page for Training Records -->
                <page string="Training Records">
                    <field name="training_record_ids" context="{'default_employee_id': active_id}">
                        <tree string="Training Records">
                            <field name="course_id"/>
                            <field name="completion_date"/>
                            <field name="result"/>
                        </tree>
                        <form string="Training Record">
                            <sheet>
                                <group>
                                    <field name="course_id"/>
                                    <field name="completion_date"/>
                                    <field name="trainer"/>
                                    <field name="result"/>
                                    <field name="certificate_attachment"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
                <!-- Add a new page for Skills -->
                <page string="Skills">
                    <field name="skill_ids" widget="many2many_tags"/>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
