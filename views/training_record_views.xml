<odoo>
   <record id="view_training_record_form" model="ir.ui.view">
        <field name="name">training.record.form</field>
        <field name="model">training.record</field>
        <field name="arch" type="xml">
            <form string="Training Record">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="course_id"/>
                        <field name="completion_date"/>
                        <field name="trainer"/>
                        <field name="result"/>
                        <field name="certificate_attachment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_training_record_tree" model="ir.ui.view">
        <field name="name">training.record.tree</field>
        <field name="model">training.record</field>
        <field name="arch" type="xml">
            <tree string="Training Records">
                <field name="employee_id"/>
                <field name="course_id"/>
                <field name="completion_date"/>
                <field name="result"/>
            </tree>
        </field>
    </record>
    
</odoo>
